	author = {Coughlan, Damian and Fitzpatrick, Colin and McMahon, Muireann},
	year = {2018},
	note = {Type: Article},
	keywords = {Testing, Printed circuit boards, Circular economy, Design, Disassembly, Electronic Waste, Environmental impact, Laptop computers, Life cycle, Product lifetime extension, Recycling, Repurposing, Resource efficiencies, Reuse, WEEE},
	pages = {809 -- 820},
}

