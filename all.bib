@inproceedings{iravantchi_sawsense_2023,
	address = {New York, NY, USA},
	series = {{CHI} '23},
	title = {{SAWSense}: {Using} {Surface} {Acoustic} {Waves} for {Surface}-bound {Event} {Recognition}},
