	author = {Khurana, Rushil and Hodges, Steve},
	year = {2020},
	note = {event-place: Honolulu, HI, USA},
	keywords = {hardware device realization, long tail hardware, low volume electronics manufacturing, productization},
	pages = {1--11},
}

