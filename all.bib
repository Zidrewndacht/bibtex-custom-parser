	keywords = {Automatic optical inspection, Soldering, Deep learning, YOLO, Neural networks, Object detection, Convolution, Printed circuit boards, Fault detection, Object recognition, Timing circuits, Neural-networks, Optical data processing, Printed circuit boards assemblies, Complex networks, Objects detection, Convolutional neural network, Detecting defects, Network architecture, Illumination system, Neural network architecture},
