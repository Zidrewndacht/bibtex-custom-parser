@inproceedings{bronchain_implementing_2018,
	address = {New York, NY, USA},
	series = {{ASHES} '18},
	title = {Implementing {Trojan}-{Resilient} {Hardware} from ({Mostly}) {Untrusted} {Components} {Designed} by {Colluding} {Manufacturers}},
