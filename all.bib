	author = {Lim, JiaYou and Lim, JunYi and Baskaran, Vishnu Monn and Wang, Xin},
	year = {2023},
	note = {Type: Article},
	keywords = {Defect detection, Inspection, Printed circuit boards, Defects, Electronics products, Timing circuits, Deep neural networks, Real- time, Learning systems, Detection models, Product inspection, Context learning, Manufacturing product inspection, Manufacturing products, Real-time defect detection, Trend detection},
}

