	author = {Kang, Danqing and Lai, Jianhuang and Zhu, Junyong and Han, Yu},
	year = {2023},
	note = {Type: Article},
	keywords = {Defect detection, Deep learning, Computer vision, Printed circuit boards, Surface defects, Timing circuits, Visual inspection, Adaptive features, Feature reconstruction, Industrial vision, Network-based, Reconstruction networks, Segmentation network, Vision inspection},
	pages = {3197 -- 3214},
}

